[module/filesystem]
type = internal/fs
interval = 20

; Mountpoints to display
mount-0 = /
;;mount-1 = /home
;;mount-2 = /var

fixed-values = true

; Default: %mountpoint% %percentage_free%%
label-mounted = " HD %percentage_free%%"
label-mounted-background = #09090a
label-mounted-foreground = #969696
label-mounted-padding = 1

; Available tokens:
;   %mountpoint%
; Default: %mountpoint% is not mounted
label-unmounted = "%mountpoint%: NA"
label-unmounted-background = #09090a
label-unmounted-foreground = #969696
label-unmounted-padding = 1


[module/cpu]
type = internal/cpu
interval = 2.5
label-padding = 1
label = " CPU %percentage%%"
format-background = #09090a
format-foreground = #969696



[module/memory]
type = internal/memory
interval = 2
;format-prefix = "  " 

format-background = #09090a
format-foreground = #969696
label-padding = 1
label = " MEM %percentage_used%%"





