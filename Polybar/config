label = MEM %percentage_used%%


[module/time]
type = internal/date
interval = 60

format = <label>
format-background = #09090a
format-foreground = #eceff4

date = 󰥔 %H:%M%{F-}
time-alt = 󰃭 %a, %b %d% 

label = %date% %time%

format-prefix = 


