[bar/example]

enable-ipc=true
height = 18
width = 100%
;offset-x = 10%
;offset-y = 1%
radius = 0
border-size = 5
border-color = #1a1e21

bottom = false

scroll-up = bspwm-wsnext
scroll-down = bspwm-wsprev
wm-restack = bspwm
override-redirect = false

background = #1a1e21
foreground = #eceff4
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40


line-size = 2


padding=0
font-0=Iosevka Nerd Font:size=11;3
font-1=Hack Nerd Font:size=12:antialias=true;3
font-2=Fantasque Sans Mono:size=11;3


dpi = 100

modules-left = dark-space round-left bspwm round-right



modules-center = xwindow 

modules-right = round-left filesystem cpu memory network round-right dark-space round-left time round-right powermenu dark-space


;modules-right = filesystem memory cpu wlan powermenu empty-space



[module/empty-space]
type = custom/text
content = "  "
content-background = #09090a

[module/dark-space]
type = custom/text
content = " "



[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%



;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
[module/bspwm]
type = internal/bspwm
format = <label-state>
format-padding = 0
index-sort = true


enable-click = true
reverse-scroll = false

label-focused = 
label-focused-padding = 1
label-focused-background = #1a1c1e


label-occupied = 
label-occupied-padding = 1
label-occupied-background = #09090a


label-empty = 
label-empty-padding = 1
label-empty-background = #09090a


[module/round-left]
type = custom/text
content = %{T3}%{T-}
content-foreground = #09090a

[module/round-right]
type = custom/text
content = %{T3}%{T-}
content-foreground = #09090a





