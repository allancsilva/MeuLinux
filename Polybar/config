format-foreground = #969696
;format-prefix-foreground = #4bffdc

[module/memory]
type = internal/memory
interval = 2
format-prefix = "  " 

format-background = #09090a
format-foreground = #969696
;format-prefix-foreground = #d19a66
;format-underline = #4bffdc
